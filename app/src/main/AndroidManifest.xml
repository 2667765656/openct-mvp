<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cc.metapro.openct">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".homepage.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".preference.SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName=".homepage.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cc.metapro.openct.homepage.MainActivity"/>
        </activity>
        <activity
            android:name=".classtable.ClassActivity"
            android:label="@string/class_table"
            android:parentActivityName=".homepage.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cc.metapro.openct.homepage.MainActivity"/>
        </activity>
        <activity
            android:name=".gradelist.GradeActivity"
            android:label="@string/grade_query"
            android:parentActivityName=".homepage.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cc.metapro.openct.homepage.MainActivity"/>
        </activity>
        <activity
            android:name=".libsearch.LibSearchActivity"
            android:label="@string/search_lib"
            android:parentActivityName=".homepage.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cc.metapro.openct.homepage.MainActivity"/>
        </activity>
        <activity
            android:name=".libborrowinfo.LibBorrowActivity"
            android:label="@string/borrow_info"
            android:parentActivityName=".homepage.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cc.metapro.openct.homepage.MainActivity"/>
        </activity>
        <activity android:name=".libsearch.BookDetailActivity">
        </activity>
        <activity
            android:name=".emptyroom.RoomActivity"
            android:label="@string/empty_room_query"
            android:parentActivityName=".homepage.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cc.metapro.openct.homepage.MainActivity"/>
        </activity>

        <receiver android:name=".widget.DailyClassWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/daily_class_widget_info"/>
        </receiver>

        <service
            android:name=".widget.WidgetService"
            android:enabled="true"
            android:exported="true">
        </service>
    </application>

</manifest>