<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardView.FullWidth">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/borrow_item_title"
            style="@style/ItemTitleText"/>

        <TextView
            android:id="@+id/borrow_item_author"
            style="@style/ItemContentText"/>

        <TextView
            android:id="@+id/borrow_item_content"
            style="@style/ItemContentText"/>

        <TextView
            android:id="@+id/borrow_item_time"
            style="@style/ItemContentText"/>

        <TextView
            android:id="@+id/borrow_item_due"
            style="@style/ItemContentText"/>
    </LinearLayout>
</android.support.v7.widget.CardView>