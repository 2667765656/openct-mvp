<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/material_white</item>
        <item name="colorPrimaryDark">@color/material_white_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/material_black</item>
        <item name="android:textColorSecondary">@color/material_grey</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="CustomPreferenceCategoryText" parent="@android:style/Widget.TextView">
        <!-- Style your PreferenceCategory here. -->
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Actionbar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/material_white</item>
        <item name="colorPrimaryDark">@color/material_white_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/material_black</item>
        <item name="android:textColorSecondary">@color/material_grey</item>
    </style>

    <!--CollapsingToolbarLayout-->
    <style name="AppTheme.CollapsingToolbarLayout" parent="Widget.Design.CollapsingToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="contentScrim">@color/colorPrimary</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="expandedTitleTextAppearance">@style/AppTheme.CollExpanded</item>
    </style>

    <!--app bar layout-->
    <style name="AppTheme.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
    </style>

    <!--app bar imageView-->
    <style name="AppTheme.AppBarImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_collapseMode">parallax</item>
        <item name="layout_collapseParallaxMultiplier">0.5</item>
    </style>

    <!--toolbar-->
    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="layout_collapseMode">pin</item>
        <!--<item name="android:layout_marginTop">@dimen/toolbar_padding_top</item>-->
    </style>

    <!--toolbar expanded text appearance-->
    <style name="AppTheme.CollExpanded" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/material_black</item>
        <item name="android:textSize">@dimen/large_text</item>
    </style>

    <!--对话框输入组件默认样式-->
    <style name="dialog_edit_style" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--RecyclerView Item Title-->
    <style name="ItemTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/ex_large_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/material_black</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <!--RecyclerView Item Content-->
    <style name="ItemContentText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/material_grey</item>
    </style>

    <style name="TextAppearance.AppCompat.SeqText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/material_black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextAppearance.AppCompat.InitialText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--FloatingActionButton-->
    <style name="AppTheme.Fab" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="fabSize">normal</item>
        <item name="pressedTranslationZ">10dp</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <style name="CardView.FullWidth" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="Widget.AppCompat.Spinner.MySpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">50dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>

    <style name="Base.V7.ThemeOverlay.AppCompat.Dialog.FitSoftInput" parent="Base.V7.ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowSoftInputMode">adjustPan|stateAlwaysVisible</item>
    </style>
</resources>
