<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Actionbar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--对话框输入组件默认样式-->
    <style name="dialog_edit_margin" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--标题文字样式-->
    <style name="DialogTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--对话框的按钮文字样式-->
    <style name="DialogButtonText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--RecyclerView Item 标题文字样式-->
    <style name="ItemTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/materialDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <!--RecyclerView Item 详细文字样式-->
    <style name="ItemContentText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/materialGray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="Widget.AppCompat.Toolbar.MyToolbar" parent="Widget.AppCompat.Toolbar">
        <!--<item name="android:background">@color/colorPrimary</item>-->
        <!--<item name="android:minHeight">?actionBarSize</item>-->
        <!--<item name="android:theme">@style/Toolbar</item>-->
        <!--<item name="android:fitsSystemWindows">true</item>-->
    </style>

    <style name="TextAppearance.AppCompat.SeqText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/materialDark</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextAppearance.AppCompat.InitialText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Design.FloatingActionButton.MyFab" parent="Widget.Design.FloatingActionButton">
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="fabSize">normal</item>
        <item name="pressedTranslationZ">10dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <style name="CardView.FullWidth" parent="CardView">
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="Widget.AppCompat.Spinner.MySpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">50dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>

    <style name="Base.V7.ThemeOverlay.AppCompat.Dialog.FitSoftInput" parent="Base.V7.ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowSoftInputMode">adjustPan|stateAlwaysVisible</item>
    </style>
</resources>
